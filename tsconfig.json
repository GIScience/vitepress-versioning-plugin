  "compilerOptions": {
    "target": "es2016",
    "module": "ES6",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declarationMap": true,
    "declaration": true
  },
  "include": ["./src"]
}
